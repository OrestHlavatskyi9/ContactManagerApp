@model IEnumerable<Contact>

@{
    ViewData["Title"] = "Contacts";
}

<div class="d-flex row">
    <div class="d-flex p-0 align-items-end justify-content-end">
        <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#add-modal">
            Create contact
        </button>
    </div>
    <table class="table">
        <thead>
            <th>Name</th>
            <th>Phone Number</th>
            <th>Email</th>
            <th>Address</th>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @item.Name
                    </td>
                    <td>
                        @item.Phone
                    </td>
                    <td>
                        @(item.Email ?? "Not specified")
                    </td>
                    <td>
                        @(item.Address ?? "Not specified")
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<div class="modal fade" id="add-modal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="add-modal-label">Create contact</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form id="contact-form">
                <div class="modal-body">
                    <div class="form-floating mb-3">
                        <input type="text" class="form-control" id="name" placeholder="name">
                        <label for="name">Name</label>
                    </div>
                    <div class="form-floating mb-3">
                        <input type="text" class="form-control" id="phone" placeholder="phone">
                        <label for="phone">Phone number</label>
                    </div>
                    <div class="form-floating mb-3">
                        <input type="email" class="form-control" id="email" placeholder="name@example.com">
                        <label for="email">Email address</label>
                    </div>
                    <div class="d-flex justify-content-between">
                        <h5>Address</h5>
                        <div class="">
                            <input class="form-check-input" type="checkbox" id="address-toggle">
                            <label class="form-check-label" for="address-toggle">
                                Do not specify address
                            </label>
                        </div>
                    </div>
                    <section id="address-section">
                        <div class="form-floating mb-3">
                            <input type="text" class="form-control" id="street" placeholder="street">
                            <label for="street">Street address</label>
                        </div>
                        <div class="form-floating mb-3">
                            <input type="text" class="form-control" id="city" placeholder="city">
                            <label for="city">City</label>
                        </div>
                        <div class="form-floating mb-3">
                            <input type="text" class="form-control" id="region" placeholder="region">
                            <label for="region">Region</label>
                        </div>
                        <div class="form-floating mb-3">
                            <input type="text" class="form-control" id="country" placeholder="country">
                            <label for="country">Country</label>
                        </div>
                    </section>
                </div>
                <div class="modal-footer">
                    <button id="submit-create" type="submit" class="btn btn-primary">Submit</button>
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script type="text/javascript">
        $(document).ready(function () {
            $('#address-toggle').change(function () {
                if ($(this).is(':checked')) {
                    $('#address-section').hide();
                } else {
                    $('#address-section').show();
                }
            })

            $('#contact-form').on('submit', function(event) {
                event.preventDefault();
                console.log("hey");

                let contact = {
                    Name: $('#name').val(),
                    Phone: $('#phone').val(),
                    Email: $('#email').val(),
                    StreetAddress: $('#street').val(),
                    City: $('#city').val(),
                    Region: $('#region').val(),
                    Country: $('#country').val()
                }

                console.log(contact);
            })
        })
    </script>
}